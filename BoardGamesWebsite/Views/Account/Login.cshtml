@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="container my-4 p-4 border rounded-4 bg-white" style="max-width: 30rem">
    <div class="d-flex justify-content-center">
        <img src="/img/logo.svg" width="40" alt="logo" />
        <span class="fw-bold m-2 h3">Login</span>
    </div>

    <div class="mt-3">
        <form asp-action="Login" method="post">
            <div class="form-group my-2">
                <label asp-for="Username" class="form-label">Naam</label>
                <input asp-for="Username" class="form-control"/>
            </div>
            <div class="form-group my-2">
                <label asp-for="Password" class="form-label">Wachtwoord</label>
                <input asp-for="Password" type="password" class="form-control"/>
            </div>
            <div class="form-group">
                <div class="text-danger">
                    @Html.ValidationMessage("LoginError")
                </div>
                <div class="d-flex flex-column align-items-center mt-4 mb-2">
                    <button class="btn btn-primary" style="width: 15rem" type="submit">Login</button>
                    <a asp-action="Register" class="btn btn-link">Registreer een nieuw account</a>
                </div>
            </div>
        </form>
    </div>
</div>