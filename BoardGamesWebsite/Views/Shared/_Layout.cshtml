<!DOCTYPE html>
<html lang="nl">
<head>
    <title>@ViewData["Title"]</title>
    <meta name="description" content="GameEvent planning website" />
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link rel="stylesheet" href="/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="/css/site.css"/>
    @await RenderSectionAsync("Head", false)
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <img src="/img/logo.svg" width="64" height="60" alt="boardgames logo" class="bg-white rounded-5 p-1">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-action="All" asp-controller="GameEvent">
                        Spelavonden
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Participating" asp-controller="GameEvent">
                        Inschrijvingen
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Organised" asp-controller="GameEvent">
                        Organiseren
                    </a>
                </li>
            </ul>
            <a class="ms-auto my-2 d-flex nav-item text-decoration-none" asp-action="Settings" asp-controller="Account">
                <img class="d-none d-lg-block m-2 nav-link" src="/img/user.svg" width="30" height="30" alt="user settings">
                <span class="d-block d-lg-none nav-link">
                    Account
                </span>
            </a>
        </div>
    </div>
</nav>

<main>
    @RenderBody()
</main>

<script src="/js/bootstrap.min.js"></script>
</body>
</html>